close all; clear all; clc;

load WP
x = WP(1,:);
y = WP(2,:);
t= 0 : .01 : 10;
PP = pchip(x,y);

scrsz = get(groot,'ScreenSize');
fig1 = figure('OuterPosition',[0 scrsz(4)/2 scrsz(3)/2 scrsz(4)/2]);
hold on;
plot(x,y,'o');
plot(t,pchip(x,y,t));

scrsz = get(groot,'ScreenSize');
fig2 = figure('OuterPosition',[scrsz(3)/2 scrsz(4)/2 scrsz(3)/2 scrsz(4)/2]);
hold on;
X = -3:3;
Y = [-1 -1 -1 0 1 1 1];
T = -3:.01:3;
plot(X,Y,'o');
plot(T, pchip(X,Y,T));
plot(T,spline(X,Y,T));
legend('WP','pchi','');